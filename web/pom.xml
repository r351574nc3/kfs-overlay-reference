<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.rsmart.kuali.kfs</groupId>
    <artifactId>kfs-tem</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <artifactId>kfs-tem-web</artifactId>
  <packaging>war</packaging>
  
  <properties>
    <kfs.web.unpack.phase>none</kfs.web.unpack.phase>
    <help.unpack.phase>none</help.unpack.phase>
    <help.unpack.phase>none</help.unpack.phase>
    <build.environment>dev</build.environment>
    <env.filter>${filter.directory}/${build.environment}-build.properties</env.filter>
    <login.user>williamh</login.user>
    <default.context.path>${project.parent.artifactId}</default.context.path>
    <jrebel.phase>generate-resources</jrebel.phase>
    <rebel.root>${basedir}/../../</rebel.root>
  </properties>
  
  

  <build>
    <finalName>${project.parent.artifactId}-${environment}</finalName>

    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
        <excludes>
          <exclude>**/*.zip</exclude>
          <exclude>**/WEB-INF/**</exclude>
        </excludes>
      </resource>
      <resource>
        <targetPath>${basedir}/src/main/webapp/</targetPath>
        <directory>src/main/resources/</directory>
        <filtering>true</filtering>
        <includes>
           <include>**/WEB-INF/**</include>
        </includes>        
      </resource>
    </resources>
    
    <plugins>
      <plugin>
        <groupId>org.apache.tomcat.maven</groupId>
        <artifactId>tomcat7-maven-plugin</artifactId>
        <configuration>
            <path>/${default.context.path}</path>
            <systemProperties>
                <java.util.logging.config.file>logging.properties</java.util.logging.config.file>
                <environment>${build.environment}</environment>
                <log4j.settings.file>${user.home}/main/${build.environment}/j2ee/log4j.properties</log4j.settings.file>
            </systemProperties>
        </configuration>
        <dependencies>
            <dependency>
                <groupId>${driver.groupId}</groupId>
                <artifactId>${driver.artifactId}</artifactId>
                <version>${driver.version}</version>
            </dependency>
        </dependencies>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>${maven-antrun-plugin.version}</version>
        <executions>
          <execution>
            <id>unpack-help</id>
            <phase>${help.unpack.phase}</phase>
            <configuration>
              <target>
                <unzip src="src/main/resources/help.zip" dest="src/main/webapp/static/help/" overwrite="false" />
              </target>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>


      <plugin>
        <artifactId>maven-war-plugin</artifactId>
      </plugin>
      
      <plugin>
          <groupId>org.mortbay.jetty</groupId>
          <artifactId>jetty-maven-plugin</artifactId>
            <configuration>
                <systemProperties>
                    <systemProperty>
                        <name>environment</name><value>${build.environment}</value>
                    </systemProperty>
                    <systemProperty>
                        <name>log4j.settings.file</name><value>${user.home}/main/${build.environment}/j2ee/log4j.properties</value>
                    </systemProperty>
                    <systemProperty>
                        <name>rebel.spring_plugin</name><value>false</value>
                    </systemProperty>
                </systemProperties>
                <scanIntervalSeconds>0</scanIntervalSeconds>
                <jvmArgs>-javaagent:${rebel.home}/jrebel.jar</jvmArgs>
                <webAppConfig>
                    <contextPath>/kfs-tem</contextPath>
                    <descriptor>src/main/webapp/WEB-INF/web.xml</descriptor>
                </webAppConfig>
            </configuration>
        </plugin>
        <plugin>
            <groupId>org.zeroturnaround</groupId>
            <artifactId>jrebel-maven-plugin</artifactId>
            <configuration>
              <alwaysGenerate>true</alwaysGenerate>
              <addResourcesDirToRebelXml>true</addResourcesDirToRebelXml>
              <!--
                root is 2 directories away from jar/war modules
              -->
              <relativePath>../../</relativePath>
              <!--
                use a system property for specifing root directory (note the double $)
                start your application with -Drebel.root=c:/projects/
              -->
              <rootPath>${rebel.root}</rootPath>
              <classpath>
                  <fallback>default</fallback>
                  <resources>
                    <resource>
                      <directory>../core/target/classes</directory>
                    </resource>
                    <resource>
                      <directory>../dev/target/classes</directory>
                    </resource>
                  </resources>
              </classpath>
            </configuration>
        </plugin>
    </plugins>


        <extensions>
          <extension>
            <groupId>org.apache.maven.scm</groupId>
            <artifactId>maven-scm-provider-gitexe</artifactId>
            <version>1.3</version>
          </extension>
          <extension>
            <groupId>org.apache.maven.scm</groupId>
            <artifactId>maven-scm-manager-plexus</artifactId>
            <version>1.3</version>
          </extension>
          <extension>
            <groupId>org.kathrynhuxtable.maven.wagon</groupId>
            <artifactId>wagon-gitsite</artifactId>
            <version>0.3.1</version>
          </extension>
        </extensions>
    </build> 
  
    <dependencies>
        <dependency>
            <groupId>org.kuali.kfs</groupId>
            <artifactId>kfs</artifactId>
            <type>war</type>
        </dependency>
        
        <dependency>
            <groupId>com.rsmart.kuali.kfs</groupId>
            <artifactId>kfs-tem-core</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        
        <dependency>
            <groupId>com.rsmart.kuali.kfs</groupId>
            <artifactId>kfs-tem-dev</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>net.bull.javamelody</groupId>
            <artifactId>javamelody-core</artifactId>
        </dependency>

    </dependencies>
    
    <profiles>
        <profile>
            <id>non-dev</id>
            <activation>
                <property>
                    <name>build.environment</name>
                </property>
            </activation>
            <properties>
                <jrebel.phase>none</jrebel.phase>
                <rebel.root></rebel.root>
            </properties>
        </profile>
    </profiles>
</project>
